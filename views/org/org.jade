extends ../layout

block content
	div(class='container')
		div(class='container-fluid')
			div(class='row')
				div(class='col-md-6')
					h1.
						#{org.name}
					p
						a(href='/org/#{org_id}/edit') Edit
						form(action='/org/#{org_id}', method='post', enctype='application/x-www-form-urlencoded')
							input(type='hidden',value='delete',name='_method')
							button(type='submit') Delete
					p #{org.addr}
					p Type: #{org.type}